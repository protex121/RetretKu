<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".katering">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="109dp"
        android:background="@drawable/header"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@android:color/transparent" />

            <LinearLayout
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtjudul2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:lineSpacingExtra="12dp"
                    android:text="WELCOME"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/imgheader"
                    app:layout_constraintTop_toTopOf="@id/imgheader" />

                <TextView
                    android:id="@+id/txtsubjudul2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="12dp"
                    android:text="How can we help you today?"
                    android:textAlignment="center"
                    android:textColor="#D5D5D5"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/txtjudul"
                    app:layout_constraintTop_toBottomOf="@+id/txtjudul" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@android:color/transparent" />

            <ImageView
                android:id="@+id/imgsidemenu2"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:src="@drawable/menu_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.757"
                app:layout_constraintStart_toEndOf="@+id/txtsubjudul"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/katering_bnv" />

</androidx.constraintlayout.widget.ConstraintLayout>