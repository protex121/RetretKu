<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPengelola">

    <View
        android:id="@+id/topBar_HomePengelola"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/lFragment_HomePengelola"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/topBar_HomePengelola"
        app:layout_constraintStart_toStartOf="@+id/topBar_HomePengelola"
        app:layout_constraintTop_toTopOf="@+id/topBar_HomePengelola"
        app:srcCompat="@drawable/ap_home_white" />

    <ImageView
        android:id="@+id/lLogout_HomePengelola"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/fragmentContainer_HomePengelola"
        app:layout_constraintEnd_toEndOf="@+id/topBar_HomePengelola"
        app:layout_constraintTop_toTopOf="@+id/topBar_HomePengelola"
        app:srcCompat="@drawable/ap_logout_white" />

    <FrameLayout
        android:id="@+id/fragmentContainer_HomePengelola"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navbar_HomePengelola"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar_HomePengelola">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar_HomePengelola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightestgray"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navbar_activity_pengelola" />

</androidx.constraintlayout.widget.ConstraintLayout>