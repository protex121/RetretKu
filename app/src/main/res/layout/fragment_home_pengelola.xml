<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomeBaseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePengelola">

    <View
        android:id="@+id/profileBase_HomePengelola"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivProfilePicture_HomePengelola"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/person"
        app:layout_constraintBottom_toBottomOf="@+id/profileBase_HomePengelola"
        app:layout_constraintStart_toStartOf="@+id/profileBase_HomePengelola"
        app:layout_constraintTop_toTopOf="@+id/profileBase_HomePengelola" />

    <TextView
        android:id="@+id/tProfileNama_HomePengelola"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:text="Christopher Augustine"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/profileBase_HomePengelola"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivProfilePicture_HomePengelola"
        app:layout_constraintTop_toTopOf="@+id/ivProfilePicture_HomePengelola" />

    <RatingBar
        android:id="@+id/profileRating_HomePengelola"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:max="5"
        android:numStars="5"
        android:rating="0"
        app:layout_constraintBottom_toBottomOf="@+id/ivProfilePicture_HomePengelola"
        app:layout_constraintStart_toEndOf="@+id/ivProfilePicture_HomePengelola"
        app:layout_constraintTop_toBottomOf="@+id/tProfileNama_HomePengelola" />

    <View
        android:id="@+id/sectionDivider_HomePengelola"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/lightestgreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileBase_HomePengelola" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOverview_HomePengelola"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTransaksiAnda_HomePengelola" />

    <TextView
        android:id="@+id/textTransaksiAnda_HomePengelola"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="Transaksi Anda"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sectionDivider_HomePengelola" />

</androidx.constraintlayout.widget.ConstraintLayout>